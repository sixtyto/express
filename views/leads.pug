extends layout

block content
  h1.text-center List of leads:
  table.table
    thead
      tr
        th(scope="col") Email
        th(scope="col") Edit
        th(scope="col") Delete
      tbody
        for lead in leads
          tr(id=lead.id)
            td #{lead.email}
            td
              a(href='/lead/'+lead.id).btn.btn-primary Details
            td
              button(onclick=`deleteLead('${lead.id}')`).btn.btn-danger Delete